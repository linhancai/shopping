/**index.wxss**/

page {
    height: auto!important;
    background: #fff;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    border-radius: 50%;
    width: 200rpx;
    height: 200rpx;
    margin: 50rpx auto;
}

.container .loginBtnWrap {
    width: 502rpx;
    margin: 30rpx 20rpx 20rpx;
}

.container .login {
    width: 80%;
    margin: 70rpx auto 0;
}

.container .login .loginInput {
    border: 1px solid #c4c1c1;
    border-radius: 4px;
    margin-bottom: 30rpx;
    box-sizing: border-box;
    position: relative;
    overflow: hidden;
}

.container .login .loginInput input {
    height: 100rpx;
    line-height: 80rpx;
    padding-left: 47rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #333;
    padding-right: 164rpx;
    border-radius: 4px;
    outline: none;
    width: 100%;
}

.container .login .error {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #F75A5A;
    position: absolute;
    top: 33rpx;
    right: 40rpx;
}

.container .login .loginBtn {
    background: #C4C1C1;
    border-radius: 4px;
    width: 100%;
    height: 100rpx;
    margin-top: 70rpx;
    color: #fff;
    line-height: 100rpx;
    outline: none;
    border: none;
}

.container .login .hoverLoginBtn {
    background: #FF835C;
}

.container .login .otherMethod {
    font-size: 35rpx;
    color: #777;
}

.container .loginBtnWrap .title,
.container .loginBtnWrap .loginRegist {
    float: left;
    font-size: 40rpx;
    width: 110rpx;
    text-align: center;
    font-family: PingFangSC-Regular;
    color: #353535;
    position: relative;
}

.container .loginBtnWrap .loginRegist {
    float: right;
}

.container .loginBtnWrap .onShow::after {
    content: "";
    width: 110rpx;
    height: 8rpx;
    background: #F45C43;
    position: absolute;
    bottom: -12rpx;
    left: 0;
}

.focusIpt {
    border: 1px solid #FF835C!important;
    /* box-shadow: 0 0 4px 0 #FF835C!important; */
}

.container .loginMask .loginImg {
    position: relative;
    z-index: 6;
    width: 558rpx;
    height: 946rpx;
    margin: 70rpx auto;
    text-align: center;
}

.container .loginMask .loginImg image {
    width: 100%;
    height: 100%;
}

.container .loginMask .closeBtn {
    /*   background: url(http://ac-ytnc3d3e.clouddn.com/a510a654082077a215c5.png);
      background-size: 1200rpx 1400rpx;*/
    background-position: -253rpx -125rpx;
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    width: 63rpx;
    height: 63rpx;
}

.container .login .onLogin {
    background: #F45C43!important;
}

.loginMask .downLoad {
    position: relative;
    z-index: 6;
    width: 560rpx;
    height: 650rpx;
    margin: 217rpx auto 0;
    text-align: center;
    background: #fff;
    border-radius: 8rpx;
}

.loginMask .downLoad .downTip {
    font-family: PingFangSC-Regular;
    font-size: 34rpx;
    color: #000000;
    /* line-height:90rpx; */
    margin: 10rpx auto 15rpx;
}

.loginMask .downLoad .imgBox {
    border-bottom: 1rpx solid #E5E5E5;
    height: 524rpx;
    width: 100%;
    padding-top: 30rpx;
}

.loginMask .downLoad image {
    width: 370rpx;
    height: 370rpx;
}

.loginMask .downLoad .hideDownload {
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    color: #FF835C;
    line-height: 92rpx;
    border: none;
    background: #fff;
}

.loginMask .downLoad .hoverDownload {
    color: #F45C43;
}

.bindPhoneNumBox .text {
    font-size: 40rpx;
    color: #353535;
    letter-spacing: 0;
    width: 240rpx;
    height: 56rpx;
    margin-bottom: 70rpx;
    font-family: PingFangSC-Medium;
}

.phoneIpt {
    width: 100%;
    height: 100rpx;
    border-radius: 4px;
    border: 1px solid #c4c1c1;
    background: #fff;
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
    position: relative;
}

.phoneIpt input {
    padding-left: 52rpx;
    font-size: 28rpx;
    color: #333;
    font-family: PingFangSC-Regular;
    height: 100rpx;
    flex: 1;
    line-height: 100rpx;
}

.codeIpt {
    width: 175rpx;
}

.ipt {
    color: #C4C1C1!important;
}

.textError {
    font-size: 28rpx;
    color: #f75a5a;
    width: 200rpx;
}

.codeTextError {
    width: 140rpx;
    position: absolute;
    right: 205rpx;
}

.codeBtn {
    width: 200rpx;
    height: 100rpx;
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    line-height: 100rpx;
    border-radius: 0 2px 2px 0!important;
    /*border:none;*/
    border: 1rpx solid transparent;
    background: #C4C1C1;
    margin-right: 0rpx;
    padding: 0;
}

button::after {
    border-radius: 0;
    border: none;
}

.bindPhoneNumBtn {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #fff;
    background: #C4C1C1;
}

.bindPhoneNumBtnBox {
    border-radius: 8px;
    margin-top: 70rpx;
    border: none;
}

.btnSelectColor {
    background: #F45C43;
}

.codeBtnSelectColor {
    background: #FF835C;
    border-color: #FF835C;
    height: 105rpx;
    width: 200rpx;
    margin-right: -1rpx;
    margin-top: -1rpx;
}
