/* pages/user/user.wxss */
page{
  background: #fff;
}
.user-message{
  box-sizing:border-box;
  display: flex;
  padding: 40rpx;
  height: 220rpx;
  color: #fff;
  background: linear-gradient(-135deg, #FF835C 0%, #EB3449 100%);
}
.earnings{
  height:162rpx;
  background:#fff;
}
.earnings  .list{
  width:33.3%;
  float: left;
  text-align: center;
  margin-top: 35rpx;
  box-sizing: border-box;
}
.earnings  .list:nth-child(2){
  border-right: 1rpx solid #E0DEDE;
  border-left: 1rpx solid #E0DEDE;

}
.earnings  .list .colorRed{
  font-family: PingFangSC-Medium;
font-size: 40rpx;
line-height: 70rpx;
}
.earnings  .list .colorGray{
  font-size: 28rpx;
}
.user-message text{
  line-height: 50rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
}
.user-message image{
  width:140rpx;
height:140rpx;
border-radius:50%;
}
.nickNameBox{
  margin:20rpx 60rpx;
}
.userBtnMain{
  border-top: 20rpx solid #f7f7f7;
}
.userBtnMain .allOrders{
text-indent: 25rpx;
  	margin:20rpx 30rpx 10rpx;
}

.userBtnMain button,.allOrders{
  border-radius:0;
	width: 90%;
font-family: PingFangSC-Regular;
font-size: 30rpx;
color: #444444;
  background: #fff;
  height: 104rpx;
  line-height: 104rpx;
border-bottom: 1rpx solid #E0DEDE;
}
.userBtnMain button{
  text-align: left;
  margin: 0rpx 30rpx 10rpx;
}
.userBtnMain button::after{
border-radius: 0;
border: none;

}
.user-message .loginBtn{
  background:transparent;
color:#fff;
position:relative;
  margin-top:20rpx;
    width:230rpx;
 border: 1px solid #FFFFFF;
border-radius: 6px;
 height: 50rpx;
 line-height: 50rpx;
  font-size: 26rpx;
  text-align: center;
  }

    .loginIcons{
  width:24rpx;
  height: 24rpx;
  background-position: -54rpx -818rpx;
  display:inline-block;
position:absolute;
top:12rpx;

 }  
.already{
	font-size: 28rpx;
}
.userBtnMain .gotoOrder{
	font-size: 28rpx;
}
.userBtnMain  .icons{
  width: 44rpx;
  height: 44rpx;
  display: inline-block;
}
.userBtnMain .orderList{
  height: 195rpx;
    margin:20rpx 50rpx 0rpx 30rpx;
}
.userBtnMain  .orderIcon{
background-position: -563rpx -126rpx;
  vertical-align: sub;
  margin-right: 10rpx;
}
.userBtnMain  .address{
background-position: -563rpx -170rpx;
}
.userBtnMain  .saled{
background-position: -563rpx -214rpx;
}
.userBtnMain  .contact{
background-position: -563rpx -258rpx;
}
.userBtnMain   .rightArrow{
  background-position: -54rpx -478rpx;
float:right;
margin-top:25rpx;
}
.userBtnMain  .group{
background-position: -563rpx -302rpx;
}
.userBtnMain  .friends{
background-position: -563rpx -346rpx;
}
.userBtnMain .gotoOrder .rightArrow{
  margin-right: 38rpx;
}
.userBtnMain .gotoOrder .gotoOrderAvatar{
	float: left;
	width: 160rpx;
	height: 160rpx;
	margin: 10rpx;
}
.userBtnMain .gotoOrder  .check{
float:left;
width:45%;
font-size:28rpx;
text-align:left;
padding-top:25rpx;
line-height:45rpx;
overflow:hidden;
}

.userBtnMain .gotoOrder .check .deliver{
color: #B5ADAD;
height:80rpx;

}
.orderList .labelBox{
  margin:0 5px 0 20rpx;
  float: left;
  width: 120rpx;
  height: 100%;
font-size: 28rpx;
}
.orderList .labelBox view:nth-child(1){
color: #444444;
line-height: 80rpx;
}
.orderList .labelBox view:nth-child(2){
line-height: 130rpx;
color: #B5ADAD;
}
.buttonWrap>span{ 
  margin-right: 10rpx;
  vertical-align: middle;
}
.buttonWrap text{
  margin-left: 8rpx;
  position: relative;
}
.buttonWrap .hasNew::after{
width:16rpx;
height: 16rpx;
background: #F45C43;
border-radius: 50%;
position: absolute;
right:-16rpx;
top:-2rpx;
content: "";
}












